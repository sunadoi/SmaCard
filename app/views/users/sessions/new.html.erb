<div class="account-page" id="account-page">
  <div class="clearfix inner">
    <div class="left header">
      <h2>ユーザーLog in</h2>
      <h5>登録しているユーザーでログイン</h5>
      <%= render "users/shared/links" %>
    </div>
    <%= form_for(user_resource, as: user_resource_name, url: user_session_path(user_resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: "label" %><br />
        <%= f.email_field :email, class: "input", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "label" %><br />
        <%= f.password_field :password, class: "input", autocomplete: "current-password" %>
      </div>

      <% if user_devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "btn" %>
      </div>
    <% end %>
  </div>
</div>