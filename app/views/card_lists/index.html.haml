.container
  .card-list
    .show-contents
      .show-contents__upper
        .show-contents__upper__image= image_tag "#{@card_list.relation.image}"
        %h2.show-contents__upper__name= @card_list.relation.name
        %ul.show-contents__upper__info
          %li.show-contents__upper__location 住所: #{@card_list.relation.location}
          %li.show-contents__upper__opening 営業時間: #{@card_list.relation.opening_time.strftime("%H:%M")} ~ #{@card_list.relation.closing_time.strftime("%H:%M")}
          %li.show-contents__upper__tel TEL: #{@card_list.relation.tel}
          %li.show-contents__upper__location URL: #{@card_list.relation.url}
        = link_to '編集', edit_admin_card_list_relation_path(current_admin.id, @card_list.id, @card_list.relation.id), class: "show-contents__upper__edit btn btn-warning"
        = link_to '削除', admin_card_list_path(current_admin.id, @card_list.id), method: :delete, class: "show-contents__upper__delete btn btn-danger"
      .show-contents__middle
        .show-contents__middle__benefits
          %h2 ポイント特典
          - @card_list.benefit_lists.each do |benefit|
            - if benefit.present?
              .show-contents__middle__benefits__info
                .description
                  = benefit.description
                .show-contents__middle__benefits__info--edit
                  = link_to '編集', edit_admin_card_list_benefit_list_path(@card_list.admin_id, @card_list.id, benefit.id), class: "btn btn-warning"
                .show-contents__middle__benefits__info--destroy
                  = link_to '削除', admin_card_list_benefit_list_path(@card_list.admin_id, @card_list.id, benefit.id), method: :delete, class: "btn btn-danger"
          .show-contents__middle__benefits__btn
            = link_to '追加', new_admin_card_list_benefit_list_path(@card_list.admin_id, @card_list.id), class: "btn btn-success"
        .show-contents__middle__coupons
          %h2 クーポン
          - @card_list.coupon_lists.each do |coupon|
            - if coupon.present?
              .show-contents__middle__coupons__info
                .description
                  = coupon.description
                .expiration
                  有効期限: #{coupon.expiration.try(:strftime, "%Y/%m/%d")}
                .show-contents__middle__coupons__info--edit
                  = link_to '編集', edit_admin_card_list_coupon_list_path(@card_list.admin_id, @card_list.id, coupon.id), class: "btn btn-warning"
                .show-contents__middle__coupons__info--destroy
                  = link_to '削除', admin_card_list_coupon_list_path(@card_list.admin_id, @card_list.id, coupon.id), method: :delete, class: "btn btn-danger"
          .show-contents__middle__coupons__btn
            = link_to '追加', new_admin_card_list_coupon_list_path(@card_list.admin_id, @card_list.id), class: "btn btn-success"